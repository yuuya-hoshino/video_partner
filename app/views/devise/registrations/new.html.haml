.account
  .account_main
    %h2 新規会員登録
    .account_main_line
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email, 'メールアドレス', class: 'field_text'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class: 'field_box'
      .field
        = f.label :password,'パスワード',class: 'field_text'
        - if @minimum_password_length
          %em
            .field_text
              (英数字８文字以上)
        %br/
        = f.password_field :password, autocomplete: "new-password",class: 'field_box'
      .field
        = f.label :password_confirmation,'確認用パスワード' ,class: 'field_text'
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class: 'field_box'
      .actions
        = f.submit "会員登録", class: 'actions_submit'
    .account_have
      = link_to "アカウントをお持ちの方はこちら", new_user_session_path, class: "account_have_got" 
