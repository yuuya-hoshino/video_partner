.top_members
  - members.each do |user|
    = link_to user_path(user.id), class:"top_members_main" do
      - if user.image_name? 
        = image_tag user.image_name.url ,class:"top_members_main_image"
      - else 
        = image_tag("icon/964.png",class:"top_members_main_image")
      .top_members_main_name
        = user.name
        - if user.introduction? 
          .top_members_main_name_none_introduction
            = user.introduction
        - if user.role_id? 
          .top_members_main_name_none
            = user.role.name
        - if user.genre_id? 
          .top_members_main_name_none
            = user.genre.name
        - if user.subgenre_id?
          .top_members_main_name_none
            = user.subgenre.name
        - if user.money?
          .top_members_main_name_none
            = user.money
