      .index_profile_main_image
        = image_tag current_user.image_name.url ,class:"index_profile_main_image_icon"
    - else 
      .index_profile_main_image
        = image_tag("icon/964.png",class:"index_profile_main_image_icon")
  .index_profile_introduction
    .index_profile_introduction_name
      = current_user.name
    .index_profile_introduction_line
    .index_profile_introduction_sentence
      = current_user.introduction
